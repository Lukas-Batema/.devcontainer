{
  "name": "BatemaDevelopment's Alpine (3.17) NodeJS LTS Dev Container",
  "remoteUser": "BatemaDevelopment",
  "containerUser": "Lukas Batema",
  "containerEnv": {
    "imageVariant": "3.17"
  },
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    }
  },
  "hostRequirements": {
    "cpus": 4,
    "memory": "4gb",
    "storage": "32gb"
  },
  "settings": {
    "git.enableSmartCommit": true,
    "discord.largeImageIdling": "zzzzzzzzzz...",
    "discord.detailsEditing": "Editing the file of {dir_name}\/{file_name}, on the line of {current_line}\/{total_lines}.",
    "git.confirmSync": false,
    "discord.detailsDebugging": "Debugging the file of {dir_name}\/{file_name}, on the line of {current_line}\/{total_lines}.",
    "discord.lowerDetailsNoWorkspaceFound": "File Size: {file_size}",
    "editor.tabSize": 2,
    "discord.largeImage": "Editing a {LANG} file.",
    "git.autofetch": true,
    "editor.accessibilitySupport": "off",
    "discord.smallImage": "VSCode - Insiders",
    "discord.lowerDetailsDebugging": "Debugging the repository of {workspace}, on the branch of {git_branch}.",
    "discord.idleTimeout": 300,
    "files.autoSave": "afterDelay",
    "discord.detailsIdling": "Either AFK, on the Welcome Page, editing an Unsupported File Type, or a combination of the three.",
    "discord.lowerDetailsIdling": "",
    "discord.lowerDetailsEditing": "Editing the repository of {workspace}, on the branch of {git_branch}.",
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "files.associations": {
      "*.html": "html"
    },
    "cSpell.language": "en-GB, en-US",
    "workbench.editorAssociations": {
      "*.zip": "default"
    },
    "javascript.updateImportsOnFileMove.enabled": "always",
    "security.workspace.trust.untrustedFiles": "open",
    "settingsSync.ignoredExtensions": [
      "icrawl.discord-vscode"
    ],
    "git.postCommitCommand": "push",
    "remoteHub.commitDirectlyWarning": "off",
    "liveshare.presence": true,
    "redhat.telemetry.enabled": false,
    "workbench.startupEditor": "welcomePage",
    "sonarlint.rules": {
      "javascript:S125": {
        "level": "off"
      }
    },
    "editor.inlineSuggest.enabled": true,
    "css.format.spaceAroundSelectorSeparator": true,
    "github.copilot.enable": {
      "*": true,
      "yaml": false,
      "plaintext": true,
      "markdown": false
    },
    "swift.backgroundCompilation": true,
    "swift.diagnostics": true,
    "svelte.enable-ts-plugin": true
  }
}
